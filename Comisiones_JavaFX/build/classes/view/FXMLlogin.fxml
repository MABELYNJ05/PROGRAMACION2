<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/16" fx:controller="Controladores.FXMLloginController">
   <children>
      <HBox prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #800000;">
         <children>
            <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="283.0" style="-fx-background-color: #454545;">
               <children>
                  <Label text="INICIAR SESION" textFill="#b80e07">
                     <padding>
                        <Insets top="20.0" />
                     </padding>
                     <font>
                        <Font name="Berlin Sans FB Demi Bold" size="28.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </Label>
                  <VBox prefHeight="245.0" prefWidth="258.0">
                     <VBox.margin>
                        <Insets bottom="10.0" left="15.0" right="20.0" top="20.0" />
                     </VBox.margin>
                     <children>
                        <Label text="Username" textFill="WHITE">
                           <font>
                              <Font name="Arial" size="20.0" />
                           </font>
                        </Label>
                        <TextField fx:id="textUsername" onKeyTyped="#eventKey">
                           <font>
                              <Font name="Arial" size="15.0" />
                           </font>
                           <VBox.margin>
                              <Insets top="5.0" />
                           </VBox.margin>
                        </TextField>
                        <Label text="Password" textFill="WHITE">
                           <VBox.margin>
                              <Insets top="15.0" />
                           </VBox.margin>
                           <font>
                              <Font size="20.0" />
                           </font>
                        </Label>
                        <TextField fx:id="textPass" onKeyTyped="#eventKey">
                           <font>
                              <Font size="15.0" />
                           </font>
                           <VBox.margin>
                              <Insets top="5.0" />
                           </VBox.margin>
                        </TextField>
                        <Button fx:id="buttonIngresar" cancelButton="true" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#buttonAction" text="INGRESAR">
                           <font>
                              <Font name="Arial Black" size="20.0" />
                           </font>
                           <VBox.margin>
                              <Insets top="40.0" />
                           </VBox.margin>
                        </Button>
                     </children>
                  </VBox>
               </children>
            </VBox>
            <VBox alignment="TOP_CENTER" prefHeight="407.0" prefWidth="318.0">
               <children>
                  <ComboBox fx:id="comboboxDB" onAction="#comboboxLogin" prefHeight="25.0" prefWidth="165.0" promptText="Seleccione una opcion" visibleRowCount="5">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </ComboBox>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <VBox.margin>
                        <Insets left="15.0" right="15.0" top="15.0" />
                     </VBox.margin>
                     <children>
                        <Label fx:id="label1" textFill="WHITE">
                           <font>
                              <Font name="Arial" size="20.0" />
                           </font>
                        </Label>
                        <TextField fx:id="text1" onKeyTyped="#eventKey">
                           <font>
                              <Font size="15.0" />
                           </font>
                           <VBox.margin>
                              <Insets top="5.0" />
                           </VBox.margin>
                        </TextField>
                        <Label fx:id="label2" textFill="WHITE">
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                           <font>
                              <Font size="20.0" />
                           </font>
                        </Label>
                        <TextField fx:id="text2" onKeyTyped="#eventKey">
                           <font>
                              <Font size="15.0" />
                           </font>
                           <VBox.margin>
                              <Insets top="5.0" />
                           </VBox.margin>
                        </TextField>
                        <Button fx:id="buttonAceptar" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#ButtonAceptar" text="Aceptar">
                           <VBox.margin>
                              <Insets top="30.0" />
                           </VBox.margin>
                           <font>
                              <Font name="Arial Black" size="15.0" />
                           </font>
                        </Button>
                     </children>
                  </VBox>
               </children>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
